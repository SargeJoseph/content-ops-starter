{
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[yaml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2
		"frontMatter.content.autoUpdate.date": true,
		"frontMatter.framework.id": "nextjs",
		"yaml.validate": true,
		"editor.quickSuggestions": {
		  "strings": true
    },
    "[toml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2
    },
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2
		  "files.associations": {
			"*.mdx": "mdx"
      }
	  
  "yaml.validate": true,
  "yaml.format.enable": true,
  "yaml.editor.completion": true,
  "frontMatter.framework.id": "nextjs",
  "errorLens.enabled": true
	  
	  
}



